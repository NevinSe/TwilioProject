@model TwilioProject.Models.Events

@{
    ViewBag.Title = "_PartialManageEvent";
}

<a href="#" class="btn btn-primary btn-block btn-lg" role="button" aria-disabled="false" data-toggle="modal" data-target="#modalManageEvent">Manage Event</a>

<div class="modal fade" id="modalManageEvent" tabindex="-1" role="dialog" aria-labelledby="modalCreateHost" aria-hidden="true" style="color:black">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title w-100 font-weight-bold">Manage Event</h4>

            </div>
            <div class="modal-body d-flex justify-content-center">

                @using (Html.BeginForm("_PartialManageEvent", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(m=>m.EventID)
                    @Html.HiddenFor(m=>m.HostID)
                    <div class="form-group">
                        @Html.LabelFor(m => m.EventName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.EventName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.EventCode, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.EventCode, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.IsHosted, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.CheckBoxFor(m => m.IsHosted)
                            @Html.LabelFor(m => m.IsHosted)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary btn-block" value="Submit Changes" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}