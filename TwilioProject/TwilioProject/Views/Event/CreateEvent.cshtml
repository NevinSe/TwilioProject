@model TwilioProject.Models.Events
@{
    ViewBag.Title = "CreateEvent";
}

<a href="#" class="btn btn-primary btn-block btn-lg" role="button" aria-disabled="false" data-toggle="modal" data-target="#modalCreateHost">Create Event "Partial"</a>

<div class="modal fade" id="modalCreateHost" tabindex="-1" role="dialog" aria-labelledby="myCreateEventModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="color:black">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Create Event</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    @*<i class="fa fa-envelope prefix grey-text"></i>
                        <input type="text" id="defaultForm-CreateEvent" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="defaultForm-CreateEvent">Event Name</label>*@

                    @using (Html.BeginForm("CreateEvent", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.HostID)
                        <center><h4>Create a New Event</h4></center>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.EventName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.EventName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.EventCode, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.EventCode, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary btn-block" value="Register" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>