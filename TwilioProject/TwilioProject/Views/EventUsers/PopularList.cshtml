
<a href="#" class="btn btn-primary btn-block btn-lg" role="button" aria-disabled="false" data-toggle="modal" data-target="#modalViewPopularList">View Popular Songs</a>

<div class="modal fade" id="modalViewPopularList" tabindex="-1" role="dialog" aria-labelledby="modalViewPopularList" aria-hidden="true" style="color: black">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Popular Songs</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">

                <ul class="list-group">
                        @foreach (var item in ViewBag.TopList)
                        {
                            <li class="list-group-item">@item.Title</li>
                        }
                    </ul>

            </div>
        </div>
    </div>
</div>