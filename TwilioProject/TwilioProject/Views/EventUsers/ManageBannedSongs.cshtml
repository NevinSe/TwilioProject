@model TwilioProject.Models.Songs

<a href="#" class="btn btn-info btn-block btn-lg" role="button" aria-disabled="false" data-toggle="modal" data-target="#modalManageBannedSongs">Manage Banned Songs</a>

<div class="modal fade" id="modalManageBannedSongs" tabindex="-1" role="dialog" aria-labelledby="modalManageBannedSongs" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Manage Banned Songs</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                @Html.DropDownList("Banned Songs", (SelectList)ViewBag.BannedSongs)
                <input type="submit" value="Remove From Banned List" />
                @Html.DropDownList("Songs", (SelectList)ViewBag.Songs)
                <input type="submit" value="Add To Banned List" />
            </div>
        </div>
    </div>
</div>