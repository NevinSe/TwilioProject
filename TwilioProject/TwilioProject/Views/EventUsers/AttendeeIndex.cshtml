@{
    ViewBag.Title = "AttendeeIndex";
}

<div class="container whitespace-remove" id="host-index-container">
    <div class="row whitespace-remove" id="attendeeJumbotron">
        <div class="jumbotron jumbotron-fluid whitespace-remove">
            <div class="container" id="attendeeJumboTronContent">
                <center>
                    <h2>Queue a Song</h2>
                    <a href="#" id="songSearchButton" class="btn btn-lg" role="button" aria-disabled="false" data-toggle="modal" data-target="#songSearch">Search For a Song</a>
                </center>
            </div>
        </div>
    </div>
    <div class="modal fade" id="songSearch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Search For a Song</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <i class="fa fa-envelope prefix grey-text"></i>
                        <input type="song" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">Enter Song or Artist Name</label>
                    </div>
                    @*<a href="#" onclick="location.href='@Url.Action("ActionName")'">Help</a>*@
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <a href="#" class="btn btn-default" role="button" aria-disabled="false" data-toggle="modal" data-target="#topFiveReturnedSongs">Search</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row whitespace-remove">
        <div class=" whitespace-remove">
            <div class="whitespace-remove text-primary">
                <center>
                    <h2>Party Queue</h2>
                </center>
            </div>
        </div>
    </div>
    <div class="queueItemContainer whitespace-remove">
            <div class="songImage whitespace-remove">
                <img src="https://mir-s3-cdn-cf.behance.net/project_modules/fs/924faf52097223.590463d34792e.jpg" class="pull-left" width="100" height="100" alt="Album Art" />
                <div class="whitespace-remove">
                    <p class="h3 col-md-5" style="color:aliceblue">ViewBag.Title</p>
                    <div class="pull-right songSearchButton" style="color:#22313F">
                        <button>Like</button>
                        <button>Dislike</button>
                    </div>
                </div>
            </div>
    </div>

    @*<a href="#" class="btn btn-primary btn-block btn-lg" role="button" aria-disabled="false" data-toggle="modal" data-target="#modalHostLoginForm">Host</a>
        <a href="#" class="btn btn-info btn-block btn-lg" role="button" aria-disabled="true" data-toggle="modal" data-target="#modalAttendeeLoginForm">Attendee</a>*@
</div>